<h1>Listando os Produtos</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Descrição</th>
            <th>Categoria</th>
            <th>Preço</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @ads.each do |ad| %>
            <tr>
                <th scope="row">
                    <%= ad.id %>
                </th>
                <td>
                    <%= image_tag ad.picture(:thumb) %>
                </td>
                <td>
                    <%= ad.title %>
                </td>
                <td>
                    <%= ad.category.description %>
                </td>
                <td>
                    <%= humanized_money_with_symbol ad.price %>
                </td>
                <td>
                    <%= link_to edit_site_profile_ad_path(ad.id), class: "btn btn-primary btn-sm" do %>
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <%end %>

                    <%= link_to site_profile_ad_path(ad.id), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "Você tem certeza?"} do %>
                      <span class="glyphicon  glyphicon-remove" aria-hidden="true"></span>
                    <%end %>    
                </td>
            </tr>
            <% end %>
    </tbody>
</table>

<% if notice %>
    <%= javascript_tag "$.notify('#{notice}', 'success')" %>
<% end %>

<% if alert %>
    <script>
        $.notify("<%= alert%>", "error")
    </script>
<% end %>